# ============================================
# StoreFlow Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ============================================
# Supabase Configuration
# ============================================
# Get these from: Supabase Dashboard â†’ Settings â†’ API

# Project URL (Public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Anon/Public Key (Safe to expose in client-side code)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (NEVER expose in client-side code - server-side only!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Connection String
# Format: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
# Get from: Supabase Dashboard â†’ Settings â†’ Database â†’ Connection string
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ============================================
# Vercel Configuration
# ============================================
# Get these from: Vercel Dashboard â†’ Project â†’ Settings â†’ General

# Your Vercel deployment URL
VERCEL_URL=your-app.vercel.app

# Vercel API Token (for domain management)
# Get from: Vercel Dashboard â†’ Settings â†’ Tokens
VERCEL_TOKEN=your-vercel-token-here

# Vercel Project ID
# Get from: Vercel Dashboard â†’ Project â†’ Settings â†’ General
VERCEL_PROJECT_ID=your-project-id-here

# ============================================
# Application Configuration
# ============================================

# Application URL (for local development)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Name
NEXT_PUBLIC_APP_NAME=StoreFlow

# Base Domain (for tenant subdomains)
# Example: storeflow.com (tenants will be tenant1.storeflow.com)
NEXT_PUBLIC_BASE_DOMAIN=localhost:3000

# ============================================
# Authentication
# ============================================
# Supabase handles authentication, but you can add NextAuth if needed

# NextAuth URL (if using NextAuth)
NEXTAUTH_URL=http://localhost:3000

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# ============================================
# Payment Gateways
# ============================================

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_51...
STRIPE_SECRET_KEY=sk_test_51...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal Configuration (if using)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or 'live' for production

# Razorpay Configuration (if using)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ============================================
# Email Configuration
# ============================================
# Choose one: Resend (recommended) or SendGrid

# Option 1: Resend (Recommended)
RESEND_API_KEY=re_...

# Option 2: SendGrid
# SENDGRID_API_KEY=SG...
# SENDGRID_FROM_EMAIL=noreply@storeflow.com

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=your-resend-api-key
SMTP_FROM=noreply@storeflow.com

# ============================================
# File Storage (Supabase Storage)
# ============================================

# Supabase Storage Bucket Name
NEXT_PUBLIC_STORAGE_BUCKET=storeflow-uploads

# ============================================
# Caching (Vercel KV / Redis)
# ============================================
# Get from: Vercel Dashboard â†’ Storage â†’ KV

# Vercel KV (Redis)
KV_URL=your-kv-url
KV_REST_API_URL=https://your-kv-instance.upstash.io
KV_REST_API_TOKEN=your-kv-token

# ============================================
# Development & Debugging
# ============================================

# Node Environment
NODE_ENV=development

# Enable Debug Mode
NEXT_PUBLIC_DEBUG=false

# Log Level
LOG_LEVEL=info  # debug, info, warn, error
